<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="p-10">
    <h1 class="mb-4 text-4xl font-black">Photos</h1>
    <table class="min-w-full table-auto">
      <thead class="bg-gray-800 text-gray-300">
      <tr>
        <th>Photo</th>
        <th>Description</th>
        <th>Gallery</th>
        <th>Color</th>
        <th colspan="3">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @photos.each do |photo| %>
        <tr class="border-4 border-gray-200">
          <td><%= photo.name %></td>
          <td class="text-center"><%= photo.description %></td>
          <td class="text-center"><%= photo.gallery %></td>
          <td class="text-center"><%= photo.color %></td>
          <td class="text-center"><%= link_to 'Add Print', new_print_path(:photo_id => photo.id) %></td>
          <td class="text-center"><%= link_to 'Edit', edit_photo_path(photo) %></td>
          <td class="text-center"><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Photo', new_photo_path, class: "bg-indigo-500 text-white px-4 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black" %>
  </div>
  <div class="p-10">
    <%= link_to "Home", "/", class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>

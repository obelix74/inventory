<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="p-10">
    <h1 class="mb-4 text-4xl font-black">Media</h1>
    <table class="table-auto min-w-full">
      <thead class="bg-gray-800 text-gray-300">
      <tr>
        <th>Media</th>
        <th>Subtype</th>
        <th colspan="3">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @substrates.each do |substrate| %>
        <tr class="border-4 border-gray-200">
          <td class="text-center"><%= substrate.name %></td>
          <td class="text-center"><%= substrate.subtype %></td>
          <td><%= link_to 'Show', substrate %></td>
          <td><%= link_to 'Edit', edit_substrate_path(substrate) %></td>
          <td><%= link_to 'Destroy', substrate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="p-10">
    <%= link_to 'New Media', new_substrate_path, class: "bg-indigo-500 text-white px-4 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black" %>
    <%= link_to "Home", "/", class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
